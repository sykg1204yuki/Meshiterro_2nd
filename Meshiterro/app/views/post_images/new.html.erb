<h1>画像投稿フォーム</h1>
<!--バリデーション、エラーメッセージ-->
<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>件のエラーが発生しました<br/>
  <% @post_image.errors.full_messages.each do |message| %>
    ・<%= message %><br/>
  <% end %>
<% end %>
<!--ここまで-->


<%= form_with model:@post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>ショップ名</h4>
  <%= f.text_field :shop_name %>
  <h4>説明</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>
