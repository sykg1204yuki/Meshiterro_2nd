<div class="card-list-container py-5">
  <% post_images.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
      <%= attachment_image_tag post_image, :image, class:"card-img-top" %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post_image.user, :profile_image,
              format:'jpeg', fallback:'no-image.jpg', size:"60x60"%>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to (post_image_path(post_image.id)) do %>
              <strong><i class="fas fa-flag"></i>
                <span><%= post_image.shop_name %></span>
              </strong>
            <% end %>
          </p>
          <p class="card-text">説明:<%= post_image.caption %></p>
          <span><i class="fas fa-user"></i>By <%= post_image.user.name %> | </span>
          <span><%= link_to "#{post_image.post_comments.count}コメント",
                    post_image_path(post_image.id), class:"text-dark" %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="page-set w-25 mx-auto mt-3">
    <%= paginate post_images %>
  </div>
</div>

